	<body>
		<div class="ct-waterfall">
			<ul id="pic-ct" class="ct clearfix">
				<!--<li class="item">
					<a href="#" class="link">
						<img src=""/>
						<h4 class="header"></h4>
						<p class="desp"></p>
					</a>
				</li>-->
				<li class="item hide"></li>
			</ul>
			<div id="load"></div>
		</div>
		
		<script src="http://apps.bdimg.com/libs/jquery/1.9.1/jquery.min.js"></script>
		<script>

			/* start */
			var curPage = 1,
				perPageCount = 30;
			
			var colSumHeight = [];
				
			var $target = $('#load');
			
			$(window).on('scroll',function(){
				checkShow()
			});
				
			checkShow();
				
			function checkShow(){
				if (isShow($target)) {
					dosth()
				}
			}
			
			function isShow($el){
				var scrolH = $(window).scrollTop(),
					winH = $(window).height(),
					top = $el.offset().top;
				
				if (top < winH + scrolH) {
					return true
				}else{
					return false
				}
			}
			
			function dosth(){
				$.ajax({
					type:'get',
					url: 'http://platform.sina.com.cn/slide/album_tech',
					dataType:'jsonp',
					jsonp:'jsoncallback',
					data:{
						app_key:'1271687855',
						format:'json',
						size:'img',
						num:perPageCount,
						page:curPage
					},
					success: function(ret){
						if(ret.status.code == 0){
							var dataArr = ret.data;
							var $nodes = renderData(dataArr);
							
							render($nodes)
							curPage++
						}
					}
				})
			}
			
			
			
			
			function renderData(items){
				var tpl ='',
					$nodes;
				for (var i=0; i<items.length; i++) {
					tpl += '<li class="item">'
					tpl += '<a href="#" class="link"><img src="' + items[i].img_url
+ '" alt=""></a>'
					tpl += '<h4 class="header">' + items[i].short_name + '</h4>'
					tpl += '<p class="desp">' + items[i].short_intro + '</p>'
					tpl += '</li>'
				}
				$nodes = $(tpl)
				$('#pic-ct').append($nodes)
				return $nodes
			}
			
			/*瀑布流*/
			function render($nodes){
				var nodeWidth = $nodes.outerWidth(true),  //nodeWidth节点宽度
					colNum = parseInt($(window).width()/nodeWidth);  //colNum节点数量
				
				if (colSumHeight.length == 0) {
					for (var i=0; i<colNum; i++) {
						colSumHeight.push(0);
					}	
				}//colSumHeight判断xx数组长度等于0
				console.log(colSumHeight)
				$nodes.each(function(){
					var $cur = $(this)
					
					$(this).find('img').on('load',function(){
						var idx = 0,
							minSumHeight = colSumHeight[0];
						
					    for (var i=0; i<colSumHeight.length; i++) {
					    	if (colSumHeight[i] < minSumHeight) {
					    		idx = i;
					    		minSumHeight = colSumHeight[i];
					    	}
					    }
					    $cur.css({
					    	left:nodeWidth*idx,
					    	top:minSumHeight
					    });
					    colSumHeight[idx] = $cur.outerHeight(true) + colSumHeight[idx];
					})//当每个图
				});
			}
//			render();
//			$(window).on('resize',function(){
//				render()
//			})
		</script>
	</body>
